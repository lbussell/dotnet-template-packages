{
  "$schema": "http://json.schemastore.org/template",
  "author": "lbussell",
  "classifications": [
    "Common",
    "Console",
    "NuGet",
    "Repo"
  ],
  "identity": "LoganBussell.Templates.NuGetPackageRepo",
  "name": "NuGet Package Repo Template",
  "shortName": "nuget-package-repo",
  "sourceName": "MyPackage.1",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "authors": {
      "type": "parameter",
      "datatype": "string",
      "description": "Comma-separated list of package authors (e.g., 'John Doe, Jane Smith')",
      "replaces": "AUTHORS_PLACEHOLDER",
      "defaultValue": ""
    },
    "hasAuthors": {
      "type": "computed",
      "value": "(authors != '')"
    },
    "licenseExpression": {
      "type": "parameter",
      "datatype": "string",
      "description": "SPDX license expression for the package (e.g., 'MIT', 'Apache-2.0', 'GPL-3.0-only')",
      "replaces": "LICENSE_PLACEHOLDER",
      "defaultValue": ""
    },
    "hasLicenseExpression": {
      "type": "computed",
      "value": "(licenseExpression != '')"
    },
    "hasFileHeader": {
      "type": "computed",
      "value": "(hasAuthors || hasLicenseExpression)"
    },
    "copyrightYear": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      },
      "replaces": "YEAR_PLACEHOLDER"
    },
    "copyrightLine": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "const",
            "value": "SPDX-FileCopyrightText: Copyright (c)"
          },
          {
            "type": "ref",
            "value": "copyrightYear"
          },
          {
            "type": "ref",
            "value": "authors"
          }
        ],
        "separator": " ",
        "removeEmptyValues": true
      }
    },
    "copyrightLineComment": {
      "type": "derived",
      "valueSource": "copyrightLine",
      "valueTransform": "csComment"
    },
    "licenseLine": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "const",
            "value": "SPDX-License-Identifier:"
          },
          {
            "type": "ref",
            "value": "licenseExpression"
          }
        ],
        "separator": " ",
        "removeEmptyValues": true
      }
    },
    "licenseLineComment": {
      "type": "derived",
      "valueSource": "licenseLine",
      "valueTransform": "csComment"
    },
    "editorConfigFileHeader": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "copyrightLine"
          },
          {
            "type": "ref",
            "value": "licenseLine"
          }
        ],
        "separator": "\\n",
        "removeEmptyValues": true
      },
      "replaces": "EDITORCONFIG_FILE_HEADER"
    },
    "sourceFileHeader": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "copyrightLineComment"
          },
          {
            "type": "ref",
            "value": "licenseLineComment"
          }
        ],
        "separator": "\n",
        "removeEmptyValues": true
      },
      "replaces": "SOURCE_FILE_HEADER"
    }
  },
  "forms": {
    "csComment": {
      "identifier": "replace",
      "pattern": "^",
      "replacement": "// "
    }
  }
}